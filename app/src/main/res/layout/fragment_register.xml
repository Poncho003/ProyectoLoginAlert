<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".RegisterFragment">

    <!-- Layout principal que contiene el fragmento para el registro de usuario -->
    <RelativeLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- Título centrado de la pantalla de registro (Register) -->
        <TextView
            android:id="@+id/txtSigninRegis"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="50dp"
            android:gravity="center"
            android:text="Register"
            android:textColor="@color/white"
            android:textSize="35dp"
            android:textStyle="bold" />

        <!-- Campo de texto para ingresar el nombre de usuario -->
        <EditText
            android:id="@+id/etxtUsernameRegis"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/txtSigninRegis"
            android:layout_margin="15dp"
            android:layout_marginTop="260dp"
            android:background="#30ffffff"
            android:drawableLeft="@drawable/baseline_person_24"
            android:drawablePadding="20dp"
            android:hint="User"
            android:padding="20dp"
            android:textColor="@color/white"
            android:textColorHint="@color/white" />

        <!-- Campo de texto para ingresar el correo electrónico (Gmail) -->
        <EditText
            android:id="@+id/etxtGmailRegis"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/etxtUsernameRegis"
            android:layout_margin="15dp"
            android:background="#30ffffff"
            android:drawableLeft="@drawable/baseline_chat_bubble_24"
            android:drawablePadding="20dp"
            android:hint="Gmail"
            android:padding="20dp"
            android:textColor="@color/white"
            android:textColorHint="@color/white" />

        <!-- Campo de texto para ingresar la contraseña -->
        <EditText
            android:id="@+id/etxtPasswordRegis"
            android:layout_width="match_parent"
            android:ems="15"
            android:layout_height="wrap_content"
            android:layout_below="@id/etxtGmailRegis"
            android:layout_margin="15dp"
            android:background="#30ffffff"
            android:drawableLeft="@drawable/baseline_password_24"
            android:drawablePadding="20dp"
            android:hint="Password"
            android:padding="20dp"
            android:textColor="@color/white"
            android:textColorHint="@color/white" />

        <!-- Campo de texto para confirmar la contraseña -->
        <EditText
            android:id="@+id/etxtRePasswordRegis"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/etxtPasswordRegis"
            android:layout_margin="15dp"
            android:background="#30ffffff"
            android:drawableLeft="@drawable/baseline_password_24"
            android:drawablePadding="20dp"
            android:hint="Re Password"
            android:padding="20dp"
            android:textColor="@color/white"
            android:textColorHint="@color/white" />

        <!-- Botón de registro (Register) -->
        <Button
            android:id="@+id/btnRegisterRegis"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Register"
            android:textSize="25sp"
            android:layout_below="@+id/etxtRePasswordRegis"
            android:layout_centerHorizontal="true"
            android:backgroundTint="#009688" />

        <!-- Contenedor para los íconos de inicio de sesión con redes sociales (Twitter, Google, Facebook) -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="50dp"
            android:orientation="horizontal">

            <!-- Ícono de Twitter a la izquierda -->
            <ImageView
                android:id="@+id/iv_twitter"
                android:layout_width="49dp"
                android:layout_height="39dp"
                android:layout_marginEnd="10dp"
                android:contentDescription="Twitter login"
                android:src="@drawable/twitter" />

            <!-- Ícono de Google en el centro -->
            <ImageView
                android:id="@+id/iv_google"
                android:layout_width="49dp"
                android:layout_height="39dp"
                android:contentDescription="Google login"
                android:src="@drawable/google" />

            <!-- Ícono de Facebook a la derecha -->
            <ImageView
                android:id="@+id/iv_facebook"
                android:layout_width="49dp"
                android:layout_height="39dp"
                android:layout_marginStart="10dp"
                android:contentDescription="Facebook login"
                android:src="@drawable/fb" />

        </LinearLayout>

    </RelativeLayout>

</FrameLayout>
